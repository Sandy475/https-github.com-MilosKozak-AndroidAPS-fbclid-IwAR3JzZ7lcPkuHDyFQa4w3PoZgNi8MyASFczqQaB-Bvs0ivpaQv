

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".plugins.pump.omnipod.OmnicoreFragment">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/overview_omnicore"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/listdelimiter" />

            <Button
                android:id="@+id/omnicore_launchomnicorebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/omnicore_tab_launch_oc_button" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/omnicore_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="#FFFFFF" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/omnicore_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

